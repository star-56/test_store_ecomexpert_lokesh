{% comment %}
  Snippet: product-modal.liquid
  Exact dimensions: 311px x 447px to match screenshot
{% endcomment %}

<!-- Load Product Card CSS -->
{{ 'product-card.css' | asset_url | stylesheet_tag }}

<div class="product-modal" id="productModal" aria-hidden="true">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="modal-close" aria-label="Close modal">×</button>
    <div class="modal-body">
      <div class="modal-image">
        <img src="https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=120&h=140&fit=crop&crop=center" alt="" id="modalProductImage">
      </div>
      
      <h3 class="modal-title" id="modalProductTitle">Accordion Pleated Dress</h3>
      <p class="modal-price" id="modalProductPrice">980,00€</p>
      <p class="modal-description" id="modalProductDescription">This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.</p>
      
      <form class="product-form" id="modalProductForm">
        <div class="variant-selector color-selector">
          <label>Color</label>
          <div class="color-options" id="colorOptions">
            <!-- Colors will be populated dynamically by JavaScript -->
            <button type="button" class="color-option selected" data-color="Red">
              <div class="color-bar" style="background-color: #B20F36;"></div>
              <span>Red</span>
            </button>
            <button type="button" class="color-option" data-color="Grey">
              <div class="color-bar" style="background-color: #AFAFB7;"></div>
              <span>Grey</span>
            </button>
          </div>
        </div>
        
        <div class="variant-selector size-selector">
          <label>Size</label>
          <select class="size-dropdown" id="sizeOptions">
            <option value="">Choose your size</option>
            <!-- Sizes will be populated dynamically by JavaScript -->
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
            <option value="XL">XL</option>
          </select>
        </div>
        
        <button type="submit" class="add-to-cart-btn">
          ADD TO CART →
        </button>
      </form>
    </div>
  </div>
</div>